                            <ContentPresenter Content="{TemplateBinding Content}" TextBlock.TextAlignment="Center" Margin="0,3,0,-1" Width="Auto" FlowDirection="LeftToRight" VerticalAlignment="Stretch" RenderTransformOrigin="0.485,0.474" OpacityMask="#FFE0D2D2"/>
