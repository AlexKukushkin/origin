<Window x:Class="DB_Worker.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pc="http://schemas.microsoft.com/prototyping/2010/controls"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
    
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

    xmlns:System="clr-namespace:System;assembly=mscorlib" 
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
        
        Title="Photocenter 'ArtHouse'" Height="445" Width="665" Style="{DynamicResource VS2012WindowStyle}" FontFamily="/DB Worker;component/Fonts/#28 Days Later" Icon="Pics/icon.ico" Closing="Window_Closing">
    <Window.Resources>
        <ControlTemplate x:Key="ButtonControlTemplateCategoryADX" TargetType="{x:Type Button}">
            <!-- We use Grid as a root because it is easy to add more elements to customize the button -->
            <Grid x:Name="Grid">
                <Grid x:Name="Grid1" HorizontalAlignment="Right" Width="13">
                    <!-- Content Presenter is where the text content etc is placed by the control -->
                    <pc:SketchRectangleUC x:Name="SketchRectangleUC1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SegmentVariance="0.0" SegmentOffset="0.0" FocusVisualStyle="{DynamicResource FocusControl-Sketch}" StrokeWidth="1" Radius="0" Margin="0,1,2,1" HorizontalAlignment="Right"/>

                    <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Content}" TextBlock.TextAlignment="Center" Margin="0,3,13,4" Width="Auto" FlowDirection="LeftToRight" VerticalAlignment="Stretch" OpacityMask="Black"/>
                    <pc:SketchRectangleUC x:Name="SketchRectangleUC2" SegmentVariance="0.0" SegmentOffset="0.0" FocusVisualStyle="{DynamicResource FocusControl-Sketch}" StrokeWidth="1" Radius="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" Height="Auto" RenderTransformOrigin="0.5,0.5" Width="13" BorderBrush="#499D9D9D" Background="#493C3C3C"/>
                    <ed:BlockArrow x:Name= "Arrow1" HorizontalAlignment="Right" Margin="0,1,3,1" Stroke="Black" Width="5" ArrowBodySize="0" StrokeDashArray="7" ArrowheadAngle="0" Orientation="Left" StrokeThickness="0" RenderTransformOrigin="0.5,0.5" StrokeMiterLimit="-156" Fill="#FF9D9D9D">
                        <ed:BlockArrow.Effect>
                            <BlurEffect Radius="2" KernelType="Gaussian"/>
                        </ed:BlockArrow.Effect>
                    </ed:BlockArrow>
                </Grid>
            </Grid>
            <ControlTemplate.Triggers>

                <Trigger Property="IsMouseOver" Value="True" >
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width" To="13" Duration="0:0:0" />
                                <DoubleAnimation Storyboard.TargetProperty="Width" From ="13" To="150" Duration="0:0:0.1" />

                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Setter Property="Visibility" TargetName="SketchRectangleUC1" Value="Visible"/>
                    <Setter Property="Background" TargetName="SketchRectangleUC1" Value="#FF3C3C3C"/>
                    <Setter Property="Width" TargetName="Grid1" Value="150"/>
                    <Setter Property="Visibility" TargetName="SketchRectangleUC2" Value="Hidden"/>
                    <Setter Property="Visibility" TargetName="ContentPresenter" Value="Visible"/>

                    <Setter Property="Width" TargetName="Arrow1" Value="10"/>
                    <Setter Property="HorizontalAlignment" TargetName="SketchRectangleUC1" Value="Stretch"/>

                    <!--<Setter Property="RenderTransform" TargetName="SketchRectangleUC">
                        <Setter.Value>
                            
                            <ScaleTransform ScaleX="1"/>
                        </Setter.Value>
                    </Setter>-->

                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Visibility" TargetName="ContentPresenter" Value="Hidden"/>
                    <Setter Property="Visibility" TargetName="SketchRectangleUC2" Value="Visible"/>
                    <Setter Property="Background" TargetName="SketchRectangleUC1" Value="#FF3C3C3C"/>
                    <Setter Property="Width" TargetName="Grid1" Value="13"/>
                    <Setter Property="Width" TargetName="Arrow1" Value="5"/>
                    <Setter Property="Visibility" TargetName="SketchRectangleUC1" Value="Hidden"/>
                    <!--<Setter Property="RenderTransform" TargetName="SketchRectangleUC">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.5"/>
                        </Setter.Value>
                    </Setter>-->
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" TargetName="SketchRectangleUC1" Value="#FF232323"/>
                    <Setter Property="BorderBrush" TargetName="SketchRectangleUC1" Value="#FF0070A4"/>
                </Trigger>

            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="ButtonStyleADX_db" TargetType="{x:Type Button}" BasedOn="{x:Null}">
            <Setter Property="FontFamily" Value="{DynamicResource FontFamily-Sketch}"/>
            <Setter Property="FontSize" Value="{DynamicResource SizeDouble-Sketch}"/>
            <Setter Property="Foreground" Value="{DynamicResource BaseForeground-Sketch}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BaseBorder-Sketch}"/>
            <Setter Property="Background" Value="{DynamicResource BaseBorder-Sketch}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <!-- We use Grid as a root because it is easy to add more elements to customize the button -->
                        <Grid x:Name="Grid">
                            <!-- Content Presenter is where the text content etc is placed by the control -->
                            <pc:SketchRectangleUC x:Name="SketchRectangleUC" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SegmentVariance="0.0" SegmentOffset="0.0" FocusVisualStyle="{DynamicResource FocusControl-Sketch}" StrokeWidth="1" Radius="0" Margin="-1,-1,1,1"/>
                            <ContentPresenter Content="{TemplateBinding Content}" TextBlock.TextAlignment="Center" Margin="0" Width="Auto" FlowDirection="LeftToRight" RenderTransformOrigin="0.485,0.474" OpacityMask="Black" Height="25"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="SketchRectangleUC" Value="#FF878787"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="SketchRectangleUC" Value="#FF232323"/>
                                <Setter Property="BorderBrush" TargetName="SketchRectangleUC" Value="#FF0070A4"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="{DynamicResource FontWeight-Sketch}"/>
            <Setter Property="FocusVisualStyle" Value="{DynamicResource FocusControl-Sketch}"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource DisabledForeground-Sketch}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource DisabledBorder-Sketch}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ButtonStyleADX" TargetType="{x:Type Button}" BasedOn="{x:Null}">
            <Setter Property="FontFamily" Value="{DynamicResource FontFamily-Sketch}"/>
            <Setter Property="FontSize" Value="{DynamicResource SizeDouble-Sketch}"/>
            <Setter Property="Foreground" Value="{DynamicResource BaseForeground-Sketch}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BaseBorder-Sketch}"/>
            <Setter Property="Background" Value="{DynamicResource BaseBorder-Sketch}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <!-- We use Grid as a root because it is easy to add more elements to customize the button -->
                        <Grid x:Name="Grid">
                            <!-- Content Presenter is where the text content etc is placed by the control -->
                            <pc:SketchRectangleUC x:Name="SketchRectangleUC" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SegmentVariance="0.0" SegmentOffset="0.0" FocusVisualStyle="{DynamicResource FocusControl-Sketch}" StrokeWidth="1" Radius="0" Margin="-1,-1,1,1"/>
                            <ContentPresenter Content="{TemplateBinding Content}" TextBlock.TextAlignment="Center" Margin="0,8,0,-6" Width="Auto" FlowDirection="LeftToRight" VerticalAlignment="Stretch" RenderTransformOrigin="0.485,0.474" OpacityMask="Black"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="SketchRectangleUC" Value="#33878787"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="BorderBrush" TargetName="SketchRectangleUC" Value="#FF0070A4"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="{DynamicResource FontWeight-Sketch}"/>
            <Setter Property="FocusVisualStyle" Value="{DynamicResource FocusControl-Sketch}"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource DisabledForeground-Sketch}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource DisabledBorder-Sketch}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <ControlTemplate x:Key="ButtonControlTemplateLR" TargetType="{x:Type Button}">
            <!-- We use Grid as a root because it is easy to add more elements to customize the button -->
            <Grid x:Name="Grid" Margin="0">
                <Grid x:Name="Grid1" HorizontalAlignment="Left" Width="100" Margin="0">
                    <!-- Content Presenter is where the text content etc is placed by the control -->
                    <pc:SketchRectangleUC x:Name="SketchRectangleUC1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SegmentVariance="0.0" SegmentOffset="0.0" FocusVisualStyle="{DynamicResource FocusControl-Sketch}" StrokeWidth="1" Radius="0" Margin="1" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" Width="Auto">
                        <pc:SketchRectangleUC.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </pc:SketchRectangleUC.RenderTransform>
                    </pc:SketchRectangleUC>

                    <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Content}" TextBlock.TextAlignment="Center" Margin="13,6,0,0" Width="Auto" FlowDirection="LeftToRight" VerticalAlignment="Stretch" OpacityMask="Black"/>
                    <pc:SketchRectangleUC x:Name="SketchRectangleUC2" SegmentVariance="0.0" SegmentOffset="0.0" FocusVisualStyle="{DynamicResource FocusControl-Sketch}" StrokeWidth="1" Radius="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Height="39" RenderTransformOrigin="0.5,0.5" Width="13" BorderBrush="#499D9D9D" Background="#493C3C3C"/>
                    <ed:BlockArrow x:Name= "Arrow1" HorizontalAlignment="Left" Margin="5,1,0,1" Stroke="Black" Width="5" ArrowBodySize="0" StrokeDashArray="7" ArrowheadAngle="0" Orientation="Left" StrokeThickness="0" RenderTransformOrigin="0.5,0.5" StrokeMiterLimit="-156" Fill="#FF9D9D9D">
                        <ed:BlockArrow.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ed:BlockArrow.RenderTransform>
                        <ed:BlockArrow.Effect>
                            <BlurEffect Radius="2" KernelType="Gaussian"/>
                        </ed:BlockArrow.Effect>
                    </ed:BlockArrow>
                </Grid>
            </Grid>
            <ControlTemplate.Triggers>

                <Trigger Property="IsMouseOver" Value="True" >
                    <!--<Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width" To="13" Duration="0:0:0" />
                                <DoubleAnimation Storyboard.TargetProperty="Width" From ="13" To="214" Duration="0:0:0.1" />

                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>-->
                    <Setter Property="Visibility" TargetName="SketchRectangleUC1" Value="Visible"/>
                    <Setter Property="Background" TargetName="SketchRectangleUC1" Value="#FF3C3C3C"/>
                    <Setter Property="Width" TargetName="Grid1" Value="100"/>

                    <Setter Property="Visibility" TargetName="SketchRectangleUC2" Value="Hidden"/>
                    <Setter Property="Visibility" TargetName="ContentPresenter" Value="Visible"/>

                    <Setter Property="Width" TargetName="Arrow1" Value="10"/>
                    <Setter Property="HorizontalAlignment" TargetName="SketchRectangleUC1" Value="Stretch"/>

                    <!--<Setter Property="RenderTransform" TargetName="SketchRectangleUC">
                        <Setter.Value>
                            
                            <ScaleTransform ScaleX="1"/>
                        </Setter.Value>
                    </Setter>-->

                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Visibility" TargetName="ContentPresenter" Value="Hidden"/>
                    <Setter Property="Visibility" TargetName="SketchRectangleUC2" Value="Visible"/>
                    <Setter Property="Background" TargetName="SketchRectangleUC1" Value="#FF3C3C3C"/>
                    <Setter Property="Width" TargetName="Grid1" Value="13"/>
                    <Setter Property="Width" TargetName="Arrow1" Value="5"/>
                    <Setter Property="Visibility" TargetName="SketchRectangleUC1" Value="Hidden"/>
                    <!--<Setter Property="Margin" TargetName="Grid1" Value="0"/>-->
                    <!--<Setter Property="RenderTransform" TargetName="SketchRectangleUC">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.5"/>
                        </Setter.Value>
                    </Setter>-->
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" TargetName="SketchRectangleUC1" Value="#FF232323"/>
                    <Setter Property="BorderBrush" TargetName="SketchRectangleUC1" Value="#FF0070A4"/>
                </Trigger>

            </ControlTemplate.Triggers>
        </ControlTemplate>
